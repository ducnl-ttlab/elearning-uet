{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "declaration": true, // add and output type defs file in the dist folder 
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "rootDir": "./src",
      "esModuleInterop": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "incremental": true,
      "skipLibCheck": true,
      "strictNullChecks": false,
      "strictBindCallApply": false,
      "forceConsistentCasingInFileNames": false,
      "noFallthroughCasesInSwitch": false,
    },
    "include": [
      "src/**/*",
      "typings.d.ts",
    ],
    "exclude": [
      "node_modules",
    ]
  }